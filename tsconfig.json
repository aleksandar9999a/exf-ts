{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "ExF",
    "outDir": "./lib",
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
	"include": [
		"src"
	],
	"exclude": [
		"**/*.spec.ts"
	]
}